<h1>Listing tasks</h1>
<div class="row">
<div class="small-12 large-6 columns">
<h1>Tareas por terminar</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Time</th>
      <th>Start date</th>
      <th>Finish date</th>
      <th>User</th>
      <th>Finished</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% if user_signed_in?%>
   <tbody>
    <% @tasks.each do |task| %>
    <%if task.finished==false and task.user_id == current_user.id %>
    <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.time %></td>
        <td><%= task.start_date %></td>
        <td><%= task.finish_date %></td>
        <td><%= task.user.full_name %></td>
        <td><%= task.finished %></td>
        
      </tr>
      <%end%>
    <% end %>
  </tbody>
  <% end %>
</table>
</div>
<div class="small-12 large-6 columns">
<h1>Tareas terminadas</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Time</th>
      <th>Start date</th>
      <th>Finish date</th>
      <th>User</th>
      <th>Finished</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% if user_signed_in?%>
   <tbody>
    <% @tasks.each do |task| %>
    <%if task.finished==true and task.user_id == current_user.id %>
    <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.time %></td>
        <td><%= task.start_date %></td>
        <td><%= task.finish_date %></td>
        <td><%= task.user.full_name %></td>
        <td><%= task.finished %></td>
        
        
      </tr>
      <%end%>
    <% end %>
  </tbody>
  <% end %>
</table>
</div>

</div>
<br>
  <% if user_signed_in?%>
    <%= link_to 'New Task', new_task_path, class:'button' %>
  <% end %>